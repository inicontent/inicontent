{
	"$schema": "https://biomejs.dev/schemas/2.0.0-beta.1/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**",
			"!**/node_modules/**",
			"!**/dist/**",
			"!**/.output/**",
			"!**/.nuxt/**",
			"!**/public/**"
		],
		"ignoreUnknown": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useSingleVarDeclarator": "off",
				"noParameterAssign": "off",
				"useConst": "off",
				"useImportType": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noConfusingVoidType": "off",
				"noDoubleEquals": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded"
		}
	}
}
